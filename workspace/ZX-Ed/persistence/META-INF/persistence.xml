<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <non-jta-data-source>java://comp/env/jdbc/ZX-EdDS</non-jta-data-source>

        <properties>


            <!-- [ZX-Ed] Hypersonic version
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.release_mode" value="after_transaction"/>
            <property name="hibernate.jdbc.use_streams_for_binary" value="true"/>
            -->


            <!-- [ZX-Ed] MySQL/MariaDB version -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>


            <property name="hibernate.ejb.naming_strategy" value="br.com.summa.zxed.sql.ZxdbNamingStrategy"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="junit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>


            <!-- [ZX-Ed] Hypersonic version
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.connection.release_mode" value="after_transaction"/>
            <property name="hibernate.connection.url" value="jdbc:hsqldb:hsql://localhost:1666"/>
            -->


            <!-- [ZX-Ed] MySQL/MariaDB version -->
            <property name="hibernate.connection.driver_class" value="org.mariadb.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/zxdb"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="password"/>


            <property name="hibernate.ejb.naming_strategy" value="br.com.summa.zxed.sql.ZxdbNamingStrategy"/>
        </properties>
    </persistence-unit>

</persistence>
